<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/vehicleListBackground"
        tools:context=".ui.vehicleList.VehicleListActivity">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/TaxiImg"
            android:scaleType="fitXY"
            android:src="@drawable/taxi_top"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:background="@drawable/white_with_corners"
            android:id="@+id/relativeLayout">

        <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"
                android:text="Lessertrabe 170, 22040..."
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/addressTxt" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"
                android:text="HH-GO8480"
                android:id="@+id/nameTxt"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                android:layout_below="@id/addressTxt"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addressTxt"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>